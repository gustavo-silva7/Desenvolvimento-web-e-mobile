import pygame
import os
pygame.init()

# Dimensões padrão para celular
largura = 800
altura = 600
tela = pygame.display.set_mode((largura, altura))
pygame.display.set_caption("Jogo Fernandinho")

# Variáveis
pontos = 0
relogio = pygame.time.Clock()

# Fonte compatível com Android
fonte = pygame.font.SysFont("arial", 32)

# Carregar imagens de forma compatível
pasta = os.path.dirname(__file__)
player = pygame.image.load(os.path.join(pasta, "player.png"))
player = pygame.transform.scale(player, (80, 80))

x = largura // 2
y = altura // 2
vel = 5

rodando = True
while rodando:
    relogio.tick(60)

    for e in pygame.event.get():
        if e.type == pygame.QUIT:
            rodando = False

    # Movimentação (teclado virtual do Pydroid funciona)
    teclas = pygame.key.get_pressed()
    if teclas[pygame.K_LEFT]:  x -= vel
    if teclas[pygame.K_RIGHT]: x += vel
    if teclas[pygame.K_UP]:    y -= vel
    if teclas[pygame.K_DOWN]:  y += vel

    tela.fill((20, 20, 20))
    tela.blit(player, (x, y))

    texto = fonte.render(f"Pontos: {pontos}", True, (255,255,255))
    tela.blit(texto, (20, 20))

    pygame.display.update()

pygame.quit()
